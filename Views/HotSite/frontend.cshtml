@{
    ViewBag.Title = "Front End";
    Layout = "~/Views/Shared/Base/_Layout.cshtml";
}

<div class="formulario">  
  <div class="row">
      <div class="sixteen wide computer sixteen wide tablet sixteen wide mobile column">
          <h2>Contato</h2>
          <form name="contato_teste" id="contato_teste">            
            <div class="ui segment">
              <div class="ui grid stackable top aligned left">
                  <div class="row two column divided horizontal">
                      <div class="column">
                          <div class="ui form">
                              <div class="field required pessoa fisica">
                                  <label>Nome</label>
                                  <div class="ui left icon input">
                                      <i class="user icon"></i>
                                      <input type="text" name="name" placeholder="Nome" data-validate="name" required>
                                  </div>
                              </div>
                              <div class="field required">
                                  <label>E-mail</label>
                                  <div class="ui left icon input">
                                      <i class="mail icon"></i>
                                      <input type="email" name="Email" id="Email" placeholder="E-mail" value="rafael90@jet.com.br" data-validate="email" required>
                                  </div>
                              </div>
                              <div class="field required">
                                  <label>Telefone</label>
                                  <div class="ui left icon input">
                                      <i class="phone icon"></i>
                                      <input type="tel" name="Phone.Phone1" placeholder="(00) 00000-0000" class="masked mask_phone" data-validate="phone" required>
                                  </div>
                              </div>
                              <div class="field required">
                                  <label>Assunto</label>
                                  <div class="ui left icon input">
                                      <input type="text" name="" value="" placeholder="DÃºvidas" required>
                                  </div>
                              </div>
                              <div class="field required">
                                  <label>Mensagem</label>
                                  <div class="ui input">
                                      <textarea required></textarea>
                                  </div>
                              </div>
                              <button type="submit"
                                      class="ui animated button large submit green right floated">
                                  <div class="visible content">Enviar</div>
                                  <div class="hidden content">
                                      <i class="checkmark icon"></i>
                                  </div>
                              </button>
                          </div>
                      </div>
                      <div class="column">
                        <span class="texto"></span>
                      </div>
                  </div>
              </div>
          </div>
          </form>          
      </div>
  </div>
</div>
<script>
const contato = document.querySelector('#contato_teste');
const texto = document.querySelector('.texto');
function handleKeyUp(event){
  console.log(event.target.value);
  texto.innerText = event.target.value;
}

contato.addEventListener('keyup', handleKeyUp);
</script>